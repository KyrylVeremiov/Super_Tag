<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <TextView android:layout_centerHorizontal="true"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textStyle="italic|bold"
        android:fontFamily="monospace"
        android:textColor="#008FD1"
        android:textSize="60sp"
        android:text="Super TAG"/>

    <TableLayout  android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        >
        <TableRow>
            <Button
                android:id="@+id/num1"
                style="@style/Box"
                android:text="1"
                />
            <Button
                android:id="@+id/num2"
                style="@style/Box"
                android:text="2"
                />
            <Button
                android:id="@+id/num3"
                style="@style/Box"
                android:text="3"
                />
            <Button
                android:id="@+id/num4"
                style="@style/Box"
                android:text="4"
                />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/num5"
                style="@style/Box"
                android:text="5"
                />
            <Button
                android:id="@+id/num6"
                style="@style/Box"
                android:text="6"
                />
            <Button
                android:id="@+id/num7"
                style="@style/Box"
                android:text="7"
                />
            <Button
                android:id="@+id/num8"
                style="@style/Box"
                android:text="8"
                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/num9"
                style="@style/Box"
                android:text="9"
                />
            <Button
                android:id="@+id/num10"
                style="@style/Box"
                android:text="10"
                />
            <Button
                android:id="@+id/num11"
                style="@style/Box"
                android:text="11"
                />
            <Button
                android:id="@+id/num12"
                style="@style/Box"
                android:text="12"
                />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/num13"
                style="@style/Box"
                android:text="13"
                />
            <Button
                android:id="@+id/num14"
                style="@style/Box"
                android:text="14"
                />
            <Button
                android:id="@+id/num15"
                style="@style/Box"
                android:text="15"
                />
            <Button
                android:id="@+id/num0"
                android:text="0"
                style="@style/Box"
                />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/win"
        android:text="You win!"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:background="@drawable/end_background"
        android:textSize="50sp"
        />
    <Button
        android:id="@+id/again"
        android:text="Again"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/win"
        android:visibility="gone"
        android:background="@drawable/end_background"
        android:textSize="50sp"
        android:onClick="restart"
        />
</RelativeLayout>